<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Sistema Financiero</display-name>
	<welcome-file-list>
		<welcome-file>index.xhtml</welcome-file>
	</welcome-file-list>

	<error-page>
		<!-- Missing login -->
		<error-code>401</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<!-- Forbidden directory listing -->
		<error-code>403</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<!-- Uncaught exception -->
		<error-code>500</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<!-- Unsupported servlet method -->
		<error-code>503</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<error-page>
		<exception-type>com.sun.faces.context.FacesFileNotFoundException</exception-type>
		<location>/error/error-page.xhtml</location>
	</error-page>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
		<param-value>/resources</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.CLIENT_WINDOW_MODE</param-name>
		<param-value>url</param-value>
	</context-param>
	
	
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Allowed resources.</web-resource-name>
			<url-pattern>/javax.faces.resource/*</url-pattern>
		</web-resource-collection>
	</security-constraint>
	
	<security-constraint>
		<display-name>Solo el usuario Admin puede tener acceso a esta p치gina</display-name>
		<web-resource-collection>
			<web-resource-name>Admin</web-resource-name>
			<description></description>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>PUT</http-method>
			<http-method>POST</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Tiene acceso a todo el sistema</description>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Solo el usuario Caja puede tener acceso a esta p치gina</display-name>
		<web-resource-collection>
			<web-resource-name>Caja</web-resource-name>
			<description></description>
			<url-pattern>/caja/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>PUT</http-method>
			<http-method>POST</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
			<url-pattern>/aperturaCuentaaporte-flow/*</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
			<url-pattern>/aperturaCuentaahorro-flow/*</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
			<url-pattern>/aperturaCuentacorriente-flow/*</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
			<url-pattern>/aperturaCuentaplazofijo-flow/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Tiene acceso</description>
			<role-name>caja</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Solo el usuario JefeCaja puede tener acceso a esta p치gina</display-name>
		<web-resource-collection>
			<web-resource-name>JefeCaja</web-resource-name>
			<description></description>
			<url-pattern>/jefeCaja/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>PUT</http-method>
			<http-method>POST</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Tiene acceso</description>
			<role-name>jefeCaja</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Solo el usuario Administrador puede tener acceso a esta p치gina</display-name>
		<web-resource-collection>
			<web-resource-name>Administrador</web-resource-name>
			<description></description>
			<url-pattern>/administrador/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>PUT</http-method>
			<http-method>POST</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Index page</web-resource-name>
			<url-pattern>/index.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>Tiene acceso</description>
			<role-name>administrador</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-role>
		<description>Acesso a todo el Sistema /*</description>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<description>Acceso a la carpeta /caja/*</description>
		<role-name>caja</role-name>
	</security-role>
	<security-role>
		<description>Acceso a la carpeta /jefeCaja/*</description>
		<role-name>jefeCaja</role-name>
	</security-role>
	<security-role>
		<description>Acceso a la carpeta /administrador/*</description>
		<role-name>administrador</role-name>
	</security-role>
	
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>file</realm-name>
		<form-login-config>
			<form-login-page>/login.html</form-login-page>
			<form-error-page>/error.html</form-error-page>
		</form-login-config>
	</login-config>
</web-app>